@media only screen and (max-width:  480px)
	#wrap 
		#site-header
			overflow visible 
			#btn_nav
				position absolute
				top 8px
				right 10px
				padding 7px 10px 8px 8px
				
				background-size 12px 9px
				display block
				cursor pointer
				font-size 14px

				span
					margin-right 5px
			#menu 
				margin-left 0
				top 100% !important
				left 0 !important
				width 100%
				position absolute
				z-index 20 //!important
				background rgba(1,26,39,1)
				text-align left
				display none

				ul 
					padding 0
					margin 0

					li 
						width auto !important
						float none !important
						//border-bottom 1px solid #FFF
						background-size 13px 12px
						border-right none 

						a
							span
								left 10% !important
						.active
							background-color transparent
							color #fff



		#content
			#contenido
				#work, .item-page-work
					#proyectos
						
						
						.layout-side-left
							.info
								left 14%
							
		#extra
			display none
							


@media only screen and (max-width:  640px)
	#wrap

		#site-header
			//display none
			height 50px
			width 100%
			left 0

			&:hover
				width 100%

			#logo
				width 25%
				height 100%
				top 0
			#menu
				position: absolute;
				left: 14%;
				top 0
				ul 
					li 
						width: 14%;
						border-left: 1px solid hsla( 200, 20%, 50%, 0.3 );
						border-bottom: none;
						float: left;

						a 
							span
								font-size 1.6em
								width 25px
								left 35%
							
		
		#content
			left 0
			#contenido
				section
					width 92%
				#contactbox 
					float right
					margin-right 410px
						
				
				#home, .item-page-home
					h1 
						font-size 50px

					p 
						font-size:14px

				#work, .item-page-work
					#proyectos
						top 25%
						left 5%

						.cycle-slideshow

							.slide-diseno
								width 100% !important
								height auto !important

							.info
								top -155px

						.layout-corner-right, .layout-side-left
							.info
								
								h1 
									font-size 20px
								.descripcion 
									display none
							.images
								
								
								li 
									width: 70% !important
					.projects-nav
						bottom 15%
							
				#menu-top 
					#contact
						position absolute
						right 0
						bottom -52px

						.mobile-contact
							display block

		/*#extra
			display none*/
							
		
@media only screen and (max-width:  1024px)
	#wrap
		#content
			#contenido
				#work, .item-page-work
					#proyectos
						top 25%
						.cycle-slideshow

							.info
								top -155px
								right auto
							.slide-diseno
								width 500px 
								height 300px
								margin-left 0 !important
						.cycle-pager
								
							div 
								width 90px 
								height 70px
					.projects-nav
						bottom 10%
									
			
